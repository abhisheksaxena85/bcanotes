<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BCANOTES" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">#FEE9AC</item>
        <!-- Customize your theme here. -->
        <item name="android:homeAsUpIndicator">@color/toolbarTitleColor</item>
    </style>


<!--This theme is for pdf activity-->
    <style name="Theme.pdfactivity" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">#FEE9AC</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>
    <style name="progressBar">
        <item name="colorAccent">@color/progressbarColor</item> <!-- Whatever color you want-->
    </style>

    <style name="data_field_color_and_properties">
        <item name="boxStrokeErrorColor">@color/errorTextColor</item>
        <item name="errorTextColor">@color/errorTextColor</item>
        <item name="android:textColorHint">@color/data_field_color</item>
        <item name="errorIconTint">@color/errorIconColor</item>
        <item name="boxStrokeColor">@color/bordercolorEditText</item>
    </style>

</resources>