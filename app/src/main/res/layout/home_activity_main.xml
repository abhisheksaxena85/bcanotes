<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="#FEE9AC"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <!--Adding here toolbar on main activity-->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar_main"
        android:background="#FEE9AC"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginRight="17dp"
                android:tooltipText="Account"
                android:layout_alignParentRight="true"
                android:src="@drawable/profile"
                android:id="@+id/user_profile"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BCA NOTES"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/toolbarTitleColor"
                    android:textSize="20sp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="22dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                <!-- Setting Introduction Text Here       -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="9dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Hi!!"
                    android:textColor="#222222"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="9dp"
                        android:fontFamily="@font/aldrich"
                        android:text=""
                        android:textAlignment="center"
                        android:id="@+id/username_firebase"
                        android:textColor="#222222"
                        android:textSize="23sp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Get Your"
                    android:textColor="#222222"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Complete Syllabus"
                    android:textColor="#222222"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Total 6 Semesters are Available"
                    android:textColor="#303030"
                    android:textSize="15sp" />
            </LinearLayout>
            <!--This is horizontal scroll for semester option-->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- First Semester CardView-->
                    <!--  Second Semester cardView -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/semester1card"
                        android:layout_width="@dimen/dimen_230"
                        android:layout_height="@dimen/dimen_250"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:backgroundTint="#FFDE7C"
                        android:elevation="@dimen/dimen_8"
                        app:cardCornerRadius="8dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <!-- Card Image part-->
                            <ImageView
                                android:id="@+id/anim_card1_sem1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_250"
                                android:layout_alignParentTop="true"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/online_certificate_course" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/anim_card1_sem1"
                                android:layout_alignParentBottom="true"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="@dimen/dimen_8"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Semester 1"
                                android:textAlignment="center"
                                android:textColor="#620000"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/semester2card"
                        android:layout_width="@dimen/dimen_230"
                        android:layout_height="@dimen/dimen_250"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:backgroundTint="#FFDE7C"
                        android:elevation="@dimen/dimen_8"
                        app:cardCornerRadius="8dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- Card Image part-->
                            <ImageView
                                android:id="@+id/anim_card2_sem1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_250"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/robot_working_in_office" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/image_fom_sem1"
                                android:layout_alignParentBottom="true"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="@dimen/dimen_8"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Semester 2"
                                android:textAlignment="center"
                                android:textColor="#620000"
                                android:textSize="22sp"
                                android:textStyle="bold"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Third Semester CardView          -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/semester3card"
                        android:layout_width="@dimen/dimen_230"
                        android:layout_height="@dimen/dimen_250"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:backgroundTint="#FFDE7C"
                        android:elevation="@dimen/dimen_8"
                        app:cardCornerRadius="8dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- Card Image part-->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_190"
                                android:layout_alignParentTop="true"
                                android:id="@+id/anim_card3_sem1"
                                android:src="@drawable/data"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/image_fom_sem1"
                                android:layout_alignParentBottom="true"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="@dimen/dimen_8"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Semester 3"
                                android:textAlignment="center"
                                android:textColor="#620000"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <!--Fourth Semester CardView          -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/semester4card"
                        android:layout_width="@dimen/dimen_230"
                        android:layout_height="@dimen/dimen_250"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:backgroundTint="#FFDE7C"
                        android:elevation="@dimen/dimen_8"
                        app:cardCornerRadius="8dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- Card Image part-->

                            <ImageView
                                android:id="@+id/anim_card4_sem1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_200"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/coding_workshop" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/image_fom_sem1"
                                android:layout_alignParentBottom="true"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="@dimen/dimen_8"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Semester 4"
                                android:textAlignment="center"
                                android:textColor="#620000"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <!--Fifth Semester CardView          -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/semester5card"
                        android:layout_width="@dimen/dimen_230"
                        android:layout_height="@dimen/dimen_250"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:backgroundTint="#FFDE7C"
                        android:elevation="@dimen/dimen_8"
                        app:cardCornerRadius="8dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <ImageView
                                android:id="@+id/anim_card5_sem1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_200"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/operating_system_upgrade_v1" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/image_fom_sem1"
                                android:layout_alignParentBottom="true"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="@dimen/dimen_8"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Semester 5"
                                android:textAlignment="center"
                                android:textColor="#620000"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <!--Sixth Semester CardView          -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/semester6card"
                        android:layout_width="@dimen/dimen_230"
                        android:layout_height="@dimen/dimen_250"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:layout_weight="1"
                        android:backgroundTint="#FFDE7C"
                        android:elevation="@dimen/dimen_8"
                        app:cardCornerRadius="8dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/anim_card6_sem1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_200"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/cloud_data_transfer" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/anim_card6_sem1"
                                android:layout_alignParentBottom="true"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="@dimen/dimen_8"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Semester 6"
                                android:textAlignment="center"
                                android:textColor="#620000"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
            <!--Now adding the other section      -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Other :"
                    android:textColor="#222222"
                    android:textSize="20sp"
                    android:textStyle="bold" />


<!--        Opening the syllabus pdf-->
                <!--This for previous year question pepar-->
                <LinearLayout
                    android:id="@+id/syllabus_pdf_redirect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_25">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dimen_60"
                        android:layout_height="@dimen/dimen_60"
                        android:backgroundTint="#3C0B66"
                        app:cardCornerRadius="12dp"
                        android:layout_gravity="center"
                        app:cardUseCompatPadding="true"
                        android:padding="12dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="@dimen/dimen_30"
                                android:layout_height="@dimen/dimen_40"
                                android:src="@drawable/baseline_collections_bookmark_24"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Syllabus Of University"
                            android:textColor="#000"
                            android:textSize="19sp"
                            android:textStyle="" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Here is the syllabus from MJPRU"
                            android:textColor="#80000000"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:background="#FFB26A" />
                    </LinearLayout>
                </LinearLayout>



                <!--This for previous year question pepar-->
                <LinearLayout
                    android:id="@+id/previous_year_pepar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_25"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_25">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dimen_60"
                        android:layout_height="@dimen/dimen_60"
                        android:backgroundTint="#396AA0"
                        app:cardCornerRadius="12dp"
                        android:layout_gravity="center"
                        app:cardUseCompatPadding="true"
                        android:padding="12dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/dimen_40"
                            android:layout_height="@dimen/dimen_40"
                            android:src="@drawable/test"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Previous Year Pepars"
                            android:textColor="#000"
                            android:textSize="19sp"
                            android:textStyle="" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Find Question pepars for practice"
                            android:textColor="#80000000"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:background="#FFB26A" />
                    </LinearLayout>
                </LinearLayout>
                <!--This is for online compiler-->
                <LinearLayout
                    android:id="@+id/online_compiler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_25"
                    android:layout_marginBottom="@dimen/dimen_25"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_25">


                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dimen_60"
                        android:layout_height="@dimen/dimen_60"
                        android:backgroundTint="#DD5C38"
                        app:cardCornerRadius="12dp"
                        android:layout_gravity="center"
                        app:cardUseCompatPadding="true"
                        android:padding="12dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="@dimen/dimen_40"
                                android:layout_height="@dimen/dimen_40"
                                android:src="@drawable/devices_svgrepo_com"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Online C Compiler"
                            android:textColor="#000"
                            android:textSize="19sp"
                            android:textStyle="" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Write Your program here"
                            android:textColor="#80000000"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:background="#FFB26A" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_banner_id"
        android:background="#fff"
        app:adUnitId="@string/banner_unit_id"
        app:adSize="BANNER"/>
</LinearLayout>