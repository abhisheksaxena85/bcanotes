<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background_color"
    android:layout_height="match_parent"
    tools:context="com.techofgrowth.bcanotes2.semester4syllabus">

    <!--Setting toolbar Here-->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEE9AC"
        android:id="@+id/sem4_toolbar"/>
    <!--Main body content scrollview -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <!--This is Content Card View first row-->
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="@dimen/dimen_200">
                <!--First Card of operating system-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/sem4_operating_system"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:layout_marginRight="@dimen/dimen_4"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="@color/main_card_color">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_150"
                            android:layout_alignParentTop="true"
                            android:id="@+id/image_card1_sem4"
                            android:src="@drawable/developer_team"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image_card1_sem4"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/dimen_4"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Operating System"
                            android:textAlignment="center"
                            android:textColor="#620000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <!--Second Card of DBMS SQL-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/sem4_dbms_sql"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="@color/main_card_color">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_180"
                            android:layout_alignParentTop="true"
                            android:id="@+id/image_card2_sem4"
                            android:src="@drawable/cloud_data_processing"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image_card2_sem4"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/dimen_4"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Introduction to DBMS Sql"
                            android:textAlignment="center"
                            android:textColor="#620000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <!--This is Content Card View second row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_200">
                <!--Third Cardview of management information system-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/sem4_management_info_system"
                    android:layout_marginLeft="@dimen/dimen_8"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="@dimen/dimen_4"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="@color/main_card_color">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_150"
                            android:layout_alignParentTop="true"
                            android:id="@+id/image_card3_sem4"
                            android:src="@drawable/sales_team"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image_card3_sem4"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/dimen_4"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Management Information System"
                            android:textAlignment="center"
                            android:textColor="#620000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <!--Fourth cardView of Visual Basic Programming language-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_4"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:id="@+id/sem4_visual_basic"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="@color/main_card_color">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_140"
                            android:layout_alignParentTop="true"
                            android:id="@+id/image_card4_sem4"
                            android:src="@drawable/software_engineer"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image_card4_sem4"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/dimen_4"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Visual Basic Programming Language"
                            android:textAlignment="center"
                            android:textColor="#620000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <!--This third row of content CardView-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_200"
                android:gravity="center_horizontal">
                <!--Fifth cardview of system Analysis And Design     -->
                <androidx.cardview.widget.CardView
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_8"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="@color/main_card_color"
                    android:id="@+id/sem4_system_analysis_design">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/image_card5_sem4"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_160"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="0dp"
                            android:src="@drawable/data" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image_card5_sem4"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/dimen_4"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="System Analysis And Design"
                            android:textAlignment="center"
                            android:textColor="#620000"
                            android:textSize="19sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!--Setting Adview here-->
    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/sem4_banner_id"
        android:background="#fff"
        app:adUnitId="@string/banner_unit_id"
        app:adSize="BANNER"/>


</LinearLayout>