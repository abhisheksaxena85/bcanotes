<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FEE9AC"
    android:gravity="center_horizontal"
    tools:context="com.techofgrowth.bcanotes2.semester2syllabus">
<!--Setting toolbar Here-->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEE9AC"
        android:id="@+id/sem2_toolbar"/>

<!--Main body content scrollview    -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
<!--This is Content Card View first row-->
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="@dimen/dimen_200">
<!--First Card of Digital Electronic-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/sem2_digital_elec"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:layout_marginRight="@dimen/dimen_4"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="#FBDC7F">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_170"
                            android:layout_alignParentTop="true"
                            android:id="@+id/image_de_sem2"
                            android:src="@drawable/mobile_book"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image_de_sem2"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/dimen_4"
                            android:text="Digital Electronics"
                            android:textAlignment="center"
                            android:textColor="#620000"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
<!--Second Card of Discrete Math        -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/sem2_discrete_math"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="#FBDC7F">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_140"
                            android:layout_alignParentTop="true"
                            android:id="@+id/image_dismath_sem2"
                            android:src="@drawable/mathematics"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image_dismath_sem2"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/dimen_4"
                            android:text="Discrete Mathematics"
                            android:textAlignment="center"
                            android:textColor="#620000"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
<!--This is Content Card View second row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_200">
<!--Third Cardview of Mathematics Second-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/sem2_second_math"
                    android:layout_marginLeft="@dimen/dimen_8"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="@dimen/dimen_4"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="#FBDC7F">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_140"
                            android:layout_alignParentTop="true"
                            android:id="@+id/image_secondmath_sem2"
                            android:src="@drawable/mathematics"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image_secondmath_sem2"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/dimen_4"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="Mathematics - ii"
                            android:textAlignment="center"
                            android:textColor="#620000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
<!--Fourth cardView of Programming In C        -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_4"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:id="@+id/sem2_c_programming"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="#FBDC7F">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_140"
                            android:layout_alignParentTop="true"
                            android:id="@+id/image_cpro_sem2"
                            android:src="@drawable/bca_card_image"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image_cpro_sem2"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/dimen_4"
                            android:text="Programming In C"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textAlignment="center"
                            android:textColor="#620000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
<!--This third row of content CardView-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_height="@dimen/dimen_200"
                android:gravity="center_horizontal">
<!--Fifth cardview of Managerial Economics        -->
                <androidx.cardview.widget.CardView
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_8"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    app:cardUseCompatPadding="true"
                    android:backgroundTint="#FBDC7F"
                    android:id="@+id/sem2_managerial_eco">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_155"
                            android:layout_alignParentTop="true"
                            android:id="@+id/image_manageeco_sem2"
                            android:src="@drawable/competition"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/image_manageeco_sem2"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="@dimen/dimen_4"
                            android:text="Managerial Economics"
                            android:textAlignment="center"
                            android:textColor="#620000"
                            android:fontFamily="sans-serif-smallcaps"
                            android:textSize="19sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


<!--Setting Adview here-->
    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/sem2_banner_id"
        android:background="#fff"
        app:adUnitId="@string/banner_unit_id"
        app:adSize="BANNER"/>
</LinearLayout>