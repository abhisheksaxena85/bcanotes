<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.techofgrowth.bcanotes2.RegisterUserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">

            <!--Main Body part-->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:paddingRight="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#00FFFFFF">
                    <!--Main Image-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="30dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="140dp">

                        <ImageView
                            android:id="@+id/login_main_img"
                            android:layout_width="140dp"
                            android:layout_height="90dp"
                            android:src="@drawable/data_report" />
                        <!-- Main Title Text-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/aldrich"
                            android:gravity="center_vertical"
                            android:text="Register Here"
                            android:textSize="20sp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:textAlignment="center"
                            android:textColor="#E41F0000"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>
                    <!--Data field -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginBottom="22dp"
                        android:padding="9dp">

                        <!-- name text edit-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            app:boxStrokeErrorColor="@color/errorTextColor"
                            app:errorTextColor="@color/errorTextColor"
                            android:textColorHint="@color/data_field_color"
                            app:errorIconTint="@color/errorIconColor"
                            app:boxStrokeColor="@color/bordercolorEditText"
                            android:layout_marginBottom="8dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/nameRegister_text_input_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:tooltipText="Name"
                                android:textColor="@color/data_text_color"
                                android:hint="Name"
                                android:inputType="text"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Username textedit   -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            app:boxStrokeErrorColor="@color/errorTextColor"
                            app:errorTextColor="@color/errorTextColor"
                            android:textColorHint="@color/data_field_color"
                            app:errorIconTint="@color/errorIconColor"
                            app:boxStrokeColor="@color/bordercolorEditText"
                            android:layout_height="wrap_content"
                            android:id="@+id/usernameRegister_text_input_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:tooltipText="username"
                                android:textColor="@color/data_text_color"
                                android:hint="Username"
                                android:inputType="text"/>
                        </com.google.android.material.textfield.TextInputLayout>


                        <!-- Email text edit-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/emailRegister_text_input_layout"
                            android:layout_marginBottom="8dp"
                            app:boxStrokeErrorColor="@color/errorTextColor"
                            app:errorTextColor="@color/errorTextColor"
                            android:textColorHint="@color/data_field_color"
                            app:errorIconTint="@color/errorIconColor"
                            app:boxStrokeColor="@color/bordercolorEditText"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Email"
                                android:tooltipText="Email"
                                android:textColor="@color/data_text_color"
                                android:inputType="text"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Phone Number text edit-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/data_field_color"
                            android:id="@+id/phoneNRegister_text_input_layout"
                            android:layout_marginBottom="8dp"
                            app:boxStrokeErrorColor="@color/errorTextColor"
                            app:errorTextColor="@color/errorTextColor"
                            app:errorIconTint="@color/errorIconColor"
                            app:boxStrokeColor="@color/bordercolorEditText"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Phone Number"
                                android:textColor="@color/data_text_color"
                                android:tooltipText="Phone Number"
                                android:inputType="number"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <!--                    Password text edit-->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/passwordRegister_text_input_layout"
                            app:passwordToggleEnabled="true"
                            app:boxStrokeErrorColor="@color/errorTextColor"
                            app:errorTextColor="@color/errorTextColor"
                            android:textColorHint="@color/data_field_color"
                            app:passwordToggleTint="@color/data_field_color"
                            app:errorIconTint="@color/errorIconColor"
                            app:boxStrokeColor="@color/bordercolorEditText"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:password="true"
                                android:hint="Password"
                                android:textColor="@color/data_text_color"
                                android:tooltipText="Password"
                                android:inputType="textPassword"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <!--Sign Up Button   -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/registerUser_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="65dp"
                            android:layout_marginRight="65dp"
                            android:backgroundTint="@color/main_card_color"
                            android:text="Register"
                            android:textColor="#565656" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:gravity="center">
                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_50"
                            android:visibility="gone"
                            android:theme="@style/progressBar"
                            android:outlineSpotShadowColor="#fff"
                            android:outlineAmbientShadowColor="#fff"
                            android:id="@+id/registerProgressBar"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/loginTextRegisterActivity"
                            android:layout_height="wrap_content"
                            android:text="Already User?  Sign In Here"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:fontFamily="@font/biryani_semibold"
                            android:layout_marginTop="24dp"
                            android:textColor="#88000E25"/>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>