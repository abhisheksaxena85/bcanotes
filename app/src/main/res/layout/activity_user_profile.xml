<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/main_background_color"
    tools:context=".userProfile">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"></androidx.appcompat.widget.Toolbar>
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_80"
                    android:src="@drawable/profile"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Details"
                    android:textColor="#424242"
                    android:fontFamily="@font/aldrich"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/dimen_19"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="22dp"
                    android:padding="9dp">

                <!-- name text edit-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/nameprofile_text_input_layout"
                    app:boxStrokeErrorColor="@color/errorTextColor"
                    app:errorTextColor="@color/errorTextColor"
                    android:textColorHint="@color/data_field_color"
                    app:passwordToggleTint="@color/data_field_color"
                    app:errorIconTint="@color/errorIconColor"
                    app:boxStrokeColor="@color/bordercolorEditText"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nameprofile_edit_text"
                        android:tooltipText="Name"
                        android:textColor="@color/data_text_color"
                        android:hint="Name"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Username textedit   -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="8dp"
                    app:boxStrokeErrorColor="@color/errorTextColor"
                    app:errorTextColor="@color/errorTextColor"
                    android:textColorHint="@color/data_field_color"
                    app:passwordToggleTint="@color/data_field_color"
                    app:errorIconTint="@color/errorIconColor"
                    app:boxStrokeColor="@color/bordercolorEditText"
                    android:id="@+id/usernameprofile_text_input_layout"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tooltipText="username"
                        android:focusable="false"
                        android:clickable="false"
                        android:textColor="#78000000"
                        android:cursorVisible="false"
                        android:id="@+id/usernameprofile_edit_text"
                        android:hint="Username"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Email text edit-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxStrokeErrorColor="@color/errorTextColor"
                    app:errorTextColor="@color/errorTextColor"
                    android:textColorHint="@color/data_field_color"
                    app:passwordToggleTint="@color/data_field_color"
                    app:errorIconTint="@color/errorIconColor"
                    app:boxStrokeColor="@color/bordercolorEditText"
                    android:id="@+id/emailprofile_text_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:id="@+id/emailprofile_edit_text"
                        android:tooltipText="Email"
                        android:textColor="@color/data_text_color"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone Number text edit-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeErrorColor="@color/errorTextColor"
                    app:errorTextColor="@color/errorTextColor"
                    android:textColorHint="@color/data_field_color"
                    app:passwordToggleTint="@color/data_field_color"
                    app:errorIconTint="@color/errorIconColor"
                    app:boxStrokeColor="@color/bordercolorEditText"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/phoneNprofile_text_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone Number"
                        android:textColor="@color/data_text_color"
                        android:id="@+id/phoneNprofile_edit_text"
                        android:tooltipText="Phone Number"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!--                    Password text edit-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    app:boxStrokeErrorColor="@color/errorTextColor"
                    app:errorTextColor="@color/errorTextColor"
                    android:textColorHint="@color/data_field_color"
                    app:passwordToggleTint="@color/data_field_color"
                    app:errorIconTint="@color/errorIconColor"
                    app:boxStrokeColor="@color/bordercolorEditText"
                    android:id="@+id/passwordprofile_text_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:password="true"
                        android:id="@+id/passwordprofile_edit_text"
                        android:hint="Password"
                        android:textColor="@color/data_text_color"
                        android:tooltipText="Password"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/updateInforbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="65dp"
                android:backgroundTint="@color/main_card_color"
                android:text="Update details"
                android:textColor="#565656" />
        </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:gravity="center">
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:visibility="gone"
                        android:theme="@style/progressBar"
                        android:outlineSpotShadowColor="#fff"
                        android:outlineAmbientShadowColor="#fff"
                        android:id="@+id/profileProgressBar"/>

                </LinearLayout>
    </LinearLayout>
        </ScrollView>
</LinearLayout>